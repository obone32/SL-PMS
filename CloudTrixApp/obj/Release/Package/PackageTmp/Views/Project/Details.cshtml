@model CloudTrixApp.Models.Project

@{
    ViewBag.Title = "Details";
}

<div class="wraper container-fluid ">
    <div class="row">
        <div class="col col-md-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Details of Project </h3>
                </div>
                <div class="panel-body">
                    @Html.HiddenFor(model => model.ProjectID)

                    <div class="container-fluid">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="ProjectName"> Project Name : </label>
                                @Html.TextBox("ProjectName", null, new { @class = "form-control", @placeholder = "Project Name", @disabled = "on" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="BillingName"> Billing Name :</label>
                                @Html.TextBox("BillingName", null, new { @class = "form-control  ", @placeholder = "Billing Name ", @disabled = "on" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="CompanyID"> Company Name :</label>
                                @Html.TextBoxFor(Model => Model.Company.CompanyName, new { @class = "form-control  ", @placeholder = "Company Name ", @disabled = "on" })
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="ProjectStatusID"> Project Status : </label>
                                @Html.TextBoxFor(x => x.ProjectStatus.ProjectStatusName, new { @class = "form-control  ", @placeholder = "Project Status ", @disabled = "on" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="ClientID"> Client :</label>
                               @Html.TextBoxFor(x => x.Client.ClientName, new { @class = "form-control  ", @placeholder = "Client Name ", @disabled = "on" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="ArchitectID"> Architect :</label>
                                @Html.TextBoxFor(x => x.Architect.ArchitectName, new { @class = "form-control ", @placeholder = "Architect Name ", @disabled = "on" })
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="Description"> Description : </label>
                                @Html.TextBox("Description", null, new { @class = "form-control", @placeholder = "Description", @disabled = "on" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="Location"> Location :</label>
                                @Html.TextBox("Location", null, new { @class = "form-control  ", @placeholder = "Location ", @disabled = "on" })
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="StartDate"> StartDate : </label>
                                @Html.TextBox("StartDate", null, new { @class = "form-control datepicker", @placeholder = "StartDate", @disabled = "on" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="EndDate"> EndDate :</label>
                                @Html.TextBox("EndDate", null, new { @class = "form-control datepicker", @placeholder = "EndDate ", @disabled = "on" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div><hr size=2><br /></div>
                    <div class="col-sm-4 col-lg-offset-4">
                        <div class="form-group">
                            &nbsp;&nbsp;
                            @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
  
    </script>
}
