@model CloudTrixApp.Models.TaskAssignment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TaskAssignment</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.TaskAssignmentID)

        <div class="form-group">
            @Html.LabelFor(model => model.AssignmentDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AssignmentDate, new { @class = "datepicker" })
                @Html.ValidationMessageFor(model => model.AssignmentDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaskID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TaskID")
                @Html.ValidationMessageFor(model => model.TaskID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeID")
                @Html.ValidationMessageFor(model => model.EmployeeID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaskStateID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TaskStateID")
                @Html.ValidationMessageFor(model => model.TaskStateID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
 
