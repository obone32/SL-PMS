            @Html.ActionLink("Company I D", "Index", new { sortOrder = ViewData["CompanyIDSortParm"], SearchText = ViewData["SearchText"] })
        </th>
        <th>
            @Html.ActionLink("Add User I D", "Index", new { sortOrder = ViewData["AddUserIDSortParm"], SearchText = ViewData["SearchText"] })
