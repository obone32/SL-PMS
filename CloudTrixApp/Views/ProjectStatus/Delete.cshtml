@model CloudTrixApp.Models.ProjectStatus

@{
    ViewBag.Title = "Delete";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>

            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Project Status</a></li>
            <li class="active">Delete Project Status</li>
        </ol>
    </section>
    <div class="wraper container-fluid ">
        <div class="row">
            <div class="col col-md-11">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Delete Project Status </h3>
                    </div>
                    <div class="panel-body">
                        <br />
                        <p class="callout callout-danger">&nbsp;&nbsp; Do you want to delete this Project Status?</p>
                        <hr />
                        @Html.HiddenFor(model => model.ProjectStatusID)

                        <div class="container-fluid">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="ProjectStatusName"> Project Status Name : </label>
                                    @Html.TextBoxFor(model => model.ProjectStatusName, null, new { @class = "form-control ", @disabled = "off", @placeholder = "Enter Project Status Name " })
                                    @Html.ValidationMessageFor(model => model.ProjectStatusName)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div><hr size=2><br /></div>
                        <div class="col-sm-4 col-lg-offset-4">
                            <div class="form-group">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-primary" })
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>



