@model CloudTrixApp.Models.TaskAssignment

@{
    ViewBag.Title = "Details";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>

            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Task Management</a></li>
            <li class="active">Task Assignment Details</li>
        </ol>
    </section>
    <div class="container-fluid">
        <div class="row">
            <div class="col col-md-11">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Task Assignment Details </h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.TaskAssignmentID)

                            <div class="container-fluid">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="AssignmentDate">Assignment Date</label>
                                        @Html.EditorFor(model => model.AssignmentDate, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.AssignmentDate)
                                    </div>
                                </div>
                            </div>
                            <div class="container-fluid">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="TaskName">Task Name</label>
                                        @Html.TextBoxFor(x => x.Task.TaskName, new { @class = "form-control  ", @disabled = "on" })
                                        @Html.ValidationMessageFor(model => model.TaskID)
                                    </div>
                                </div>
                            </div>

                            <div class="container-fluid">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="EmployeeID">Employee Name</label>
                                        @Html.TextBoxFor(x => x.Employee.FirstName, new { @class = "form-control  ", @disabled = "on" })
                                        @Html.ValidationMessageFor(model => model.EmployeeID)
                                    </div>
                                </div>
                            </div>

                            <div class="container-fluid">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="TaskStateID">Task State Name</label>
                                        @Html.TextBoxFor(x => x.TaskState.TaskStateName, new { @class = "form-control  ", @disabled = "on" })
                                        @Html.ValidationMessageFor(model => model.TaskStateID)
                                    </div>
                                </div>
                            </div>

                            <div class="container-fluid">
                                <div><hr size=2><br /></div>
                                <div class="col-sm-4 col-lg-offset-4">
                                    <div class="form-group">
                                       @Html.ActionLink("Edit", "Edit", new { TaskAssignmentID = Model.TaskAssignmentID }) |
                                        &nbsp;&nbsp;
                                        @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
  $(document).ready(function () {
      $('#AssignmentDate').addClass('form-control');
      $('#AssignmentDate').attr('readonly', 'readonly');
  });
    </script>
}

